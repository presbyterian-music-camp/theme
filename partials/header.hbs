<!DOCTYPE html>
<html>
  <head>
    <title>{{@website.name}}</title>
    <link rel='shortcut icon' type='image/png' href='{{@config.custom.imagesFavicon}}'/>
    <link rel='stylesheet' href='{{css 'style.css' }}'>
  </head>
  <body style='
    margin: 0;
    background-image: url({{@config.custom.imagesBackground}});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: {{@config.custom.colorsBackground}};
    height: 100vh;
    overflow-y: scroll;
  '>
    <div style='display: flex; align-items: center;'>
      {{#if @website.logo}}
        <img src='{{@website.logo}}' style='height: 5rem; margin: 1rem;'>
      {{/if}}
      {{>menu menus.mainMenu}}
    </div>
