<ul style='margin:0'>
  {{#each items}}
    <li {{menuItemClasses}}>
      {{#if link}}
        <a
          href="{{menuUrl}}"
          {{#if title}}
            title="{{title}}"
          {{/if}}
        >{{label}}</a>
      {{else}}
        <span
          {{#if title}}
            title="{{title}}"
          {{/if}}
        >{{label}}</span>
      {{/if}}
      {{#if items}}
        {{> menu}}
      {{/if}}
    </li>
  {{/each}}
</ul>
